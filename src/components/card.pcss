.coral-card {
  background: #E3EDF7;
  background-image: radial-gradient(0% 65%, rgba(255,255,255,0.50) 0%, rgba(255,255,255,0.00) 81%);
  box-shadow: -10px -10px 30px 0 rgba(244,249,255,0.90), -22px -22px 94px 0 rgba(247,251,255,0.90), 22px 22px 94px 0 #A4B6CF, inset 2px 2px 2px 0 #FFFFFF;
  border-radius: 48px;
  padding: 48px;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
